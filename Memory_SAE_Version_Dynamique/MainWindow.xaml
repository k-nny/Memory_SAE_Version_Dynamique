<Window
    x:Class="Memory_SAE_Version_Dynamique.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Memory_SAE_Version_Dynamique"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid x:Name="GridJeu" Margin="0,0,150,0" />
        <Canvas Margin="624,0,0,0">

            
                <TextBlock
                    x:Name="txtTimer"
                    Canvas.Top="22"
                    Canvas.Right="70"
                    FontSize="24" />
                <Button
                    Canvas.Top="78"
                    Canvas.Right="80"
                    Width="103"
                    Height="40"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Click="StartPauseTimer_Click"
                    Content="Start/Pause" />
            <TextBlock
                    x:Name="txtScore"
                    Canvas.Top="138"
                    Canvas.Right="90"
                    FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" />
        </Canvas>
    </Grid>
</Window>
