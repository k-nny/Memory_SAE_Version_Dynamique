<Window
    x:Class="Memory_SAE_Version_Dynamique.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Memory_SAE_Version_Dynamique"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid x:Name="GridJeu" Margin="0,0,150,0" />
        <Canvas Margin="650,0,0,0">
            <TextBlock
                x:Name="txtTimer"
                Canvas.Top="25"
                Canvas.Right="50"
                FontSize="24"
                Text="00:00" />
            <Button x:Name="ButPause"
                Canvas.Top="78"
                Canvas.Right="25"
                Width="104"
                Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Menu Pause" Click="ButPause_Click" />
            <TextBlock
                x:Name="txtScore"
                Canvas.Top="201"
                Canvas.Right="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="24"
                Text="1000" />
            <TextBlock
                x:Name="txtScore_Copy"
                Canvas.Top="152"
                Canvas.Right="33"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="24"
                Text="SCORE : " />
        </Canvas>
    </Grid>
</Window>
